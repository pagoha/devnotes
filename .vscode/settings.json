{
  // === Spell Checking ===
  "cSpell.enabled": true,
  "cSpell.configFile": "./cspell.json",
  "cSpell.strict": true,
  "cSpell.words": [
    "davidanson",
    "eamodio",
    "esbenp",
    "yzhang",
    "DevNotes",
    "GitHub",
    "VSCode",
    "PowerShell",
    "CI",
    "Markdown",
    "docker",
    "Docker",
    "linting",
    "workflow",
    "yaml",
    "repo",
    "repos"
  ],

  // === Markdownlint ===
  "markdownlint.config": "${workspaceFolder}/.markdownlint.json",
  "markdownlint.fixOnSave": true,
  // Explicitly lint root files and all files inside notes/
  "markdownlint.files": ["*.md", "notes/*.md"],

  // === Editor Settings ===
  "workbench.editor.enablePreview": false
}
